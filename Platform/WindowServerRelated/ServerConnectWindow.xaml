<Window x:Class="Platform.WindowServerRelated.ServerConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="ConnectToServerWindow" Title="Connect to server" Height="204" Width="500">
    <Grid>
        <Label Name="ServerIpAddressLabel" Content="Server ip address:" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ServerIpAddressTextBox" HorizontalAlignment="Left" Height="23" Margin="129,24,0,0" Text="192.168.86.1" TextWrapping="Wrap" VerticalAlignment="Top" Width="340"/>
        <Label Name="ServerPortNumberLabel" Content="Server portnumber:" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ServerPortNumberTextBox" HorizontalAlignment="Left" Height="23" Margin="129,64,0,0" TextWrapping="Wrap" Text="5503" VerticalAlignment="Top" Width="340"/>
        <Label Name="UsernameLabel" Content="Username:" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top"/>
        <TextBox Name="UsernameTextBox"  HorizontalAlignment="Left" Height="23" Margin="129,99,0,0" TextWrapping="Wrap" Text="User1" VerticalAlignment="Top" Width="340"/>
        <Button Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top" Width="459" IsEnabled="{Binding IsConnectButtonEnabled}" Click="ConnectButton_Click" />
    </Grid>
</Window>
